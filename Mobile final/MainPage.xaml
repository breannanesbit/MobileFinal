<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile_final.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <StackLayout
                x:Name="LoginView"
                IsVisible="{Binding LoginView}">
                
                <Button 
                    x:Name="LoginBtn"
                    Text="Log In"
                    SemanticProperties.Hint="Click to log in"
                    Command="{Binding OnLoginClickedCommand}"
                    HorizontalOptions="Center" />
            </StackLayout>
            
            <StackLayout
                x:Name="HomeView"
                IsVisible="{Binding HomeView}">
            </StackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
